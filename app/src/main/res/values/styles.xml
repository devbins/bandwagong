<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title" >
        <item name="android:layout_marginLeft">@dimen/text_margin_left</item>
        <item name="android:layout_marginTop">@dimen/text_margin_top</item>
        <item name="android:color">@color/titleColor</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>


    <style name="info" >
        <item name="android:color">@color/infoColor</item>
        <item name="android:textSize">@dimen/textSize</item>
    </style>
</resources>
